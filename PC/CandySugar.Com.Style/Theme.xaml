                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="X1"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        CornerRadius="25">
                        <Border.Background>
                            <SolidColorBrush Opacity=".25" Color="Pink" />
