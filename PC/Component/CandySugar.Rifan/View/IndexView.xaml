                                    Width="100"
                                    uc:ImageAttach.RenderHeight="130"
                                    uc:ImageAttach.RenderWidth="100"
                                    uc:ImageAttach.SourceAsync="{Binding Cover}"
                                    Stretch="Uniform"
                                    Tag="{x:Static lib:EDownload.Rifan}"
                                    ToolTip="{Binding Name}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction
                                                s:View.ActionTarget="{Binding DataContext, ElementName=IndexCtrl}"
                                                Command="{s:Action WatchCommand}"
                                                CommandParameter="{Binding .}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Image>
