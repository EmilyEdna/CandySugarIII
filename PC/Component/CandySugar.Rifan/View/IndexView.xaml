                                        Margin="0,5"
                                        Style="{DynamicResource TextBlockStyle}"
                                        Text="{Binding Name}"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock
                                        Margin="0,5"
                                        FontSize="14"
                                        Style="{DynamicResource TextBlockStyle}"
                                        Text="{Binding Duration, StringFormat=时常：{0}}" />
