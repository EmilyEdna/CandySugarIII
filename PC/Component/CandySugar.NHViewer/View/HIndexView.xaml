<UserControl
    x:Class="CandySugar.NHViewer.View.HIndexView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:eda="https://github.com/EmilyEdna"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lib="http://lib.candy.com"
    xmlns:local="clr-namespace:CandySugar.NHViewer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:CandySugar.NHViewer.ViewModels"
    x:Name="Index"
    d:DataContext="{d:DesignInstance vm:HIndexViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/CandySugar.NHViewer;component/NHViewerTheme.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="20">
            <eda:CandyToggle Command="{Binding ChangedCommand}" ModelSource="{Binding Title}" />
        </Grid>
        <Grid x:Name="ContentGird" Grid.Row="1">
            <eda:CandyBorder
                x:Name="X1"
                Width="{Binding BorderWidth}"
                Height="{Binding BorderHeight}"
                BorderType="Info">
                <eda:CandyBorder.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform />
                    </TransformGroup>
                </eda:CandyBorder.RenderTransform>
                <Grid>
                    <Rectangle Fill="#50fff0f5">
                        <Rectangle.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="300"
                                Opacity="1" />
                        </Rectangle.Effect>
                    </Rectangle>
                    <ListBox
                        eda:ListBoxAttach.ScrollCommand="{Binding ScrollCommand}"
                        ItemsSource="{Binding Results, IsAsync=True}"
                        Style="{DynamicResource CandyListBoxStyle}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding DataContext.Cols, ElementName=Index}" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <eda:CandyImage
                                    Width="200"
                                    Height="280"
                                    Margin="8"
                                    Base64Source="{Binding AVIFBase64}"
                                    BorderBrush="SkyBlue"
                                    BorderThickness="1"
                                    EnableLoading="False"
                                    Entity="{Binding .}"
                                    ImageThickness="200,280"
                                    MaskFill="#80e6cfe6">
                                    <eda:CandyImage.MaskTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition Height="30" />
                                                </Grid.RowDefinitions>
                                                <ScrollViewer Height="50" VerticalScrollBarVisibility="Hidden">
                                                    <StackPanel>
                                                        <TextBox
                                                            HorizontalAlignment="Center"
                                                            ScrollViewer.CanContentScroll="True"
                                                            Style="{DynamicResource CopyStyle}"
                                                            Text="{Binding Title}"
                                                            TextWrapping="Wrap" />
                                                    </StackPanel>
                                                </ScrollViewer>
                                                <Button
                                                    Grid.Row="1"
                                                    Margin="0,0,25,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Command="{Binding DataContext.CollectCommand, ElementName=Index}"
                                                    CommandParameter="{Binding .}"
                                                    Content="{x:Static lib:FontIcon.Star}"
                                                    Cursor="Hand"
                                                    FontSize="17"
                                                    Foreground="#ffe4c4"
                                                    Style="{DynamicResource IconButton}"
                                                    ToolTip="收藏" />
                                            </Grid>
                                        </DataTemplate>
                                    </eda:CandyImage.MaskTemplate>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding DataContext.ViewCommand, ElementName=Index}" CommandParameter="{Binding .}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </eda:CandyImage>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </eda:CandyBorder>
            <eda:CandyBorder
                x:Name="X2"
                Width="{Binding BorderWidth}"
                Height="{Binding BorderHeight}"
                BorderType="Info"
                Visibility="Hidden">
                <eda:CandyBorder.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform />
                    </TransformGroup>
                </eda:CandyBorder.RenderTransform>
                <Grid>
                    <Rectangle Fill="#50fff0f5">
                        <Rectangle.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="300"
                                Opacity="1" />
                        </Rectangle.Effect>
                    </Rectangle>
                    <ListBox
                        eda:ListBoxAttach.ScrollCommand="{Binding ScrollCommand}"
                        ItemsSource="{Binding CollectResult, IsAsync=True}"
                        Style="{DynamicResource CandyListBoxStyle}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding DataContext.Cols, ElementName=Index}" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <eda:CandyImage
                                    Width="200"
                                    Height="280"
                                    Margin="8"
                                    Base64Source="{Binding Cover}"
                                    BorderBrush="SkyBlue"
                                    BorderThickness="1"
                                    EnableLoading="False"
                                    Entity="{Binding .}"
                                    ImageThickness="200,280"
                                    MaskFill="#80e6cfe6">
                                    <eda:CandyImage.MaskTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition Height="30" />
                                                </Grid.RowDefinitions>
                                                <ScrollViewer Height="50" VerticalScrollBarVisibility="Hidden">
                                                    <StackPanel>
                                                        <TextBox
                                                            HorizontalAlignment="Center"
                                                            ScrollViewer.CanContentScroll="True"
                                                            Style="{DynamicResource CopyStyle}"
                                                            Text="{Binding Title}"
                                                            TextWrapping="Wrap" />
                                                    </StackPanel>
                                                </ScrollViewer>
                                                <Button
                                                    Grid.Row="1"
                                                    Margin="0,0,25,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Command="{Binding DataContext.RemoveCommand, ElementName=Index}"
                                                    CommandParameter="{Binding PId}"
                                                    Content="{x:Static lib:FontIcon.TrashCan}"
                                                    Cursor="Hand"
                                                    FontSize="17"
                                                    Foreground="#ffe4c4"
                                                    Style="{DynamicResource IconButton}" />
                                            </Grid>
                                        </DataTemplate>
                                    </eda:CandyImage.MaskTemplate>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding DataContext.WatchCommand, ElementName=Index}" CommandParameter="{Binding .}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </eda:CandyImage>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </eda:CandyBorder>
        </Grid>
    </Grid>
</UserControl>
