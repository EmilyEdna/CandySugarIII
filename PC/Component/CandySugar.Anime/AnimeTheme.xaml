<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lib="http://lib.candy.com">

    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="1,2" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="Foreground" Value="#fdf5e6" />
    </Style>

    <Style x:Key="TextBlockTitleStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="1,2" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="Coral" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="ToolTip" Value="{Binding Text, RelativeSource={RelativeSource Mode=Self}}" />
    </Style>

    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="5,1" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="Foreground" Value="Black" />
    </Style>

</ResourceDictionary>