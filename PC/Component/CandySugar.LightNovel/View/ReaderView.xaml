    xmlns:vm="clr-namespace:CandySugar.LightNovel.ViewModels"
    x:Name="Reader"
    d:DataContext="{d:DesignInstance vm:ReaderViewModel}"
    d:DesignHeight="550"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/CandySugar.LightNovel;component/LightTheme.xaml" />
    </UserControl.Resources>
    <Grid>
        <WrapPanel HorizontalAlignment="Center">
            <FlowDocumentScrollViewer Background="Transparent" BorderThickness="0">
                <FlowDocument Background="Transparent">
                    <Paragraph>
                        <ItemsControl ItemsSource="{Binding Words}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Style="{DynamicResource TextBlockReaderStyle}"
                                        Text="{Binding .}"
                                        TextWrapping="WrapWithOverflow" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Paragraph>
                </FlowDocument>
