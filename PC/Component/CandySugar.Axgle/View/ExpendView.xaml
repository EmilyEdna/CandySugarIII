<UserControl
    x:Class="CandySugar.Axgle.View.ExpendView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:eda="https://github.com/EmilyEdna"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lib="http://lib.candy.com"
    xmlns:local="clr-namespace:CandySugar.Axgle.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:CandySugar.Axgle.ViewModels"
    x:Name="Index"
    d:DataContext="{d:DesignInstance vm:ExpendViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Margin="20" Orientation="Horizontal">
                <eda:CandyToggle Command="{Binding ChangedCommand}" ModelSource="{Binding Title}" />
                <ComboBox
                    x:Name="SelectBox"
                    Height="46"
                    ItemsSource="{Binding Tags}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectedCommand}" CommandParameter="{Binding SelectedValue, ElementName=SelectBox}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
                <ComboBox
                    x:Name="SelectEnumBox"
                    Height="46"
                    DisplayMemberPath="Key"
                    ItemsSource="{Binding TagEnumDict}"
                    SelectedValuePath="Value">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding DropChangedCommand}" CommandParameter="{Binding SelectedValue, ElementName=SelectEnumBox}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
                <eda:CandyButton
                    Height="48"
                    ButtonType="Success"
                    Command="{Binding BackCommand}"
                    Content="返回" />
            </StackPanel>
            <eda:CandyBorder
                Grid.Row="1"
                Width="{Binding BorderWidth}"
                Height="{Binding BorderHeight}"
                BorderType="Info">
                <Grid>
                    <Rectangle Fill="#50fff0f5">
                        <Rectangle.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="300"
                                Opacity="1" />
                        </Rectangle.Effect>
                    </Rectangle>
                    <ListBox
                        eda:ListBoxAttach.ScrollCommand="{Binding ScrollCommand}"
                        ItemsSource="{Binding Results, IsAsync=True}"
                        Style="{DynamicResource CandyListBoxStyle}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding DataContext.Cols, ElementName=Index}" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <eda:CandyImage
                                    Width="360"
                                    Height="250"
                                    Margin="8"
                                    BorderBrush="SkyBlue"
                                    BorderThickness="1"
                                    Entity="{Binding .}"
                                    ImageThickness="360,250"
                                    MaskFill="#80e6cfe6"
                                    Source="{Binding Cover}">
                                    <eda:CandyImage.MaskTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition Height="30" />
                                                </Grid.RowDefinitions>
                                                <StackPanel Width="360">
                                                    <ScrollViewer Height="Auto" VerticalScrollBarVisibility="Hidden">
                                                        <TextBox
                                                            HorizontalAlignment="Center"
                                                            ScrollViewer.CanContentScroll="True"
                                                            Style="{DynamicResource CopyStyle}"
                                                            Text="{Binding Title}"
                                                            TextWrapping="Wrap" />
                                                    </ScrollViewer>
                                                    <TextBlock HorizontalAlignment="Left" Style="{DynamicResource TextBlockStyle}">
                                                        <Run Text="{Binding Latest, StringFormat=更新:{0}}" />
                                                        <Run Text="{Binding Duration, StringFormat=时常:{0}}" />
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Info, StringFormat=信息:{0}}" TextWrapping="WrapWithOverflow" />
                                                </StackPanel>
                                                <Button
                                                    Grid.Row="1"
                                                    Margin="10,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Command="{Binding DataContext.CollectCommand, ElementName=Index}"
                                                    CommandParameter="{Binding .}"
                                                    Content="{x:Static lib:FontIcon.Star}"
                                                    Cursor="Hand"
                                                    FontSize="17"
                                                    Foreground="#ffe4c4"
                                                    Style="{DynamicResource IconButton}"
                                                    ToolTip="收藏" />
                                            </Grid>
                                        </DataTemplate>
                                    </eda:CandyImage.MaskTemplate>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding DataContext.WatchCommand, ElementName=Index}" CommandParameter="{Binding .}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </eda:CandyImage>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </eda:CandyBorder>
        </Grid>
        <Grid Grid.Column="1" Background="#99FFDAFE">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button
                Margin="0,5,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding TrashCommand}"
                Content="{x:Static lib:FontIcon.CircleX}"
                FontSize="15"
                Foreground="White"
                Style="{DynamicResource IconButton}"
                Visibility="{Binding Close}" />
            <ListBox
                Grid.Row="1"
                Margin="0,5,0,0"
                ItemsSource="{Binding Plays}"
                Style="{DynamicResource CandyListBoxStyle}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <eda:CandyButton
                            ButtonType="Info"
                            Command="{Binding DataContext.ViewCommand, ElementName=Index}"
                            CommandParameter="{Binding Value}"
                            Content="{Binding Key}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox
                Grid.Row="2"
                Margin="0,5"
                eda:ListBoxAttach.ScrollCommand="{Binding ScrollCommand}"
                ItemsSource="{Binding Link, IsAsync=True}"
                Style="{DynamicResource CandyListBoxStyle}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <eda:CandyImage
                            Width="360"
                            Height="250"
                            Margin="8"
                            BorderBrush="SkyBlue"
                            BorderThickness="1"
                            Entity="{Binding .}"
                            ImageThickness="360,250"
                            MaskFill="#80e6cfe6"
                            Source="{Binding Cover}">
                            <eda:CandyImage.MaskTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="30" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Width="360">
                                            <ScrollViewer Height="Auto" VerticalScrollBarVisibility="Hidden">
                                                <TextBox
                                                    HorizontalAlignment="Center"
                                                    ScrollViewer.CanContentScroll="True"
                                                    Style="{DynamicResource CopyStyle}"
                                                    Text="{Binding Title}"
                                                    TextWrapping="Wrap" />
                                            </ScrollViewer>
                                            <TextBlock HorizontalAlignment="Left" Style="{DynamicResource TextBlockStyle}">
                                                <Run Text="{Binding Latest, StringFormat=更新:{0}}" />
                                                <Run Text="{Binding Duration, StringFormat=时常:{0}}" />
                                            </TextBlock>
                                            <TextBlock Text="{Binding Info, StringFormat=信息:{0}}" TextWrapping="WrapWithOverflow" />
                                        </StackPanel>
                                        <Button
                                            Grid.Row="1"
                                            Margin="10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Command="{Binding DataContext.CollectCommand, ElementName=Index}"
                                            CommandParameter="{Binding .}"
                                            Content="{x:Static lib:FontIcon.Star}"
                                            Cursor="Hand"
                                            FontSize="17"
                                            Foreground="#ffe4c4"
                                            Style="{DynamicResource IconButton}"
                                            ToolTip="收藏" />
                                    </Grid>
                                </DataTemplate>
                            </eda:CandyImage.MaskTemplate>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding DataContext.WatchCommand, ElementName=Index}" CommandParameter="{Binding .}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </eda:CandyImage>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
