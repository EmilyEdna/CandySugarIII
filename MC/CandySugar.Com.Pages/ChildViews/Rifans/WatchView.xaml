<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CandySugar.Com.Pages.ChildViews.Rifans.WatchView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui.MediaElement"
    xmlns:vm="clr-namespace:CandySugar.Com.Pages.ChildViewModels.Rifans"
    x:DataType="vm:WatchViewModel"
    Shell.NavBarIsVisible="False">
    <toolkit:MediaElement
        x:Name="Media"
        ShouldAutoPlay="False"
        ShouldKeepScreenOn="True"
        ShouldShowPlaybackControls="True"
        Source="{Binding Route}" />
</ContentPage>