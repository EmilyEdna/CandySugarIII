<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CandySugar.Com.Pages.ChildViews.Axgles.VideoView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui.MediaElement"
    xmlns:vm="clr-namespace:CandySugar.Com.Pages.ChildViewModels.Axgles"
    x:DataType="vm:VideoViewModel"
    Shell.NavBarIsVisible="False">
    <Grid>
        <WebView
            x:Name="Player"
            IsVisible="{Binding DisplayWebView}"
            Source="{Binding Route}" />
        <toolkit:MediaElement
            x:Name="Media"
            IsVisible="{Binding DisplayExoView}"
            ShouldAutoPlay="False"
            ShouldKeepScreenOn="True"
            ShouldShowPlaybackControls="True"
            Source="{Binding URI}" />
    </Grid>
</ContentPage>